# Database Configuration
DB_USER=thetamind
DB_PASSWORD=your_secure_db_password_here
DB_NAME=thetamind
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://thetamind:your_secure_db_password_here@localhost:5432/thetamind

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Database Connection Pool (CTO Approved)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Tiger Brokers API
TIGER_API_KEY=your_tiger_api_key_here
TIGER_API_SECRET=your_tiger_api_secret_here
TIGER_SANDBOX=true
# Tiger Open SDK (for tigeropen library)
TIGER_PRIVATE_KEY=your_tiger_private_key_here
TIGER_ID=your_tiger_id_here
TIGER_ACCOUNT=your_tiger_account_here

# Google Services
GOOGLE_API_KEY=your_google_gemini_api_key_here
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Lemon Squeezy Payment
LEMON_SQUEEZY_API_KEY=your_lemon_squeezy_api_key_here
LEMON_SQUEEZY_WEBHOOK_SECRET=your_lemon_squeezy_webhook_secret_here

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Environment
ENVIRONMENT=development
DEBUG=true

# AI Model Configuration
AI_MODEL_TIMEOUT=30
AI_MODEL_DEFAULT=gemini-3.0-pro
AI_MODEL_FALLBACK=deepseek-chat

# Server Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Timezone (Backend always UTC, Frontend displays US/Eastern)
TZ=UTC
