# ThetaMind Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://thetamind:your_password@localhost:5432/thetamind
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Tiger Brokers API Configuration
# ============================================
# Legacy API credentials (may not be needed for Open SDK)
TIGER_API_KEY=your_tiger_api_key
TIGER_API_SECRET=your_tiger_api_secret

# Tiger Open SDK Configuration (Required)
# Option 1: Use config file (Preferred)
# Set TIGER_PROPS_PATH to the directory containing tiger_openapi_config.properties
TIGER_PROPS_PATH=/path/to/tiger/config/directory

# Option 2: Direct configuration (Fallback)
# Private key: Can be file path (e.g., /path/to/key.pem) or key content string (PKCS#1 format)
TIGER_PRIVATE_KEY=/path/to/private_key.pem
# Or: TIGER_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...
TIGER_ID=your_tiger_id
TIGER_ACCOUNT=your_tiger_account
TIGER_SANDBOX=true  # Set to false for production

# ============================================
# Google Services Configuration
# ============================================
# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key

# Google OAuth2 Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# Lemon Squeezy Payment Configuration
# ============================================
LEMON_SQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# JWT Authentication Configuration
# ============================================
# Generate a secure random secret key (e.g., openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# Application Environment
# ============================================
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false

# ============================================
# AI Model Configuration
# ============================================
AI_MODEL_TIMEOUT=30
AI_MODEL_DEFAULT=gemini-3.0-pro
AI_MODEL_FALLBACK=deepseek-chat

# ============================================
# Timezone Configuration
# ============================================
TIMEZONE=UTC

# ============================================
# Docker Compose Overrides (Optional)
# ============================================
# DB_USER=thetamind
# DB_PASSWORD=your_db_password
# DB_NAME=thetamind
# DB_PORT=5432
# REDIS_PORT=6379
# BACKEND_PORT=8000
# FRONTEND_PORT=3000
# NGINX_PORT=80
# NGINX_SSL_PORT=443
